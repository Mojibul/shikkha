-- CREATING STUDENT CATEGORY TABLE
CREATE TABLE tb_studentcategory
(
 categoryid VARCHAR2(1),
 categoryname VARCHAR2(20)
);
ALTER TABLE tb_studentcategory
ADD CONSTRAINT pk_tb_studentcategory PRIMARY KEY (categoryid);
