-- CREATING RELATION TABLE 
CREATE TABLE tb_relation
(
relationid NUMBER(3,0),
relationname VARCHAR2(30)
);
ALTER TABLE tb_relation
ADD CONSTRAINT pk_tb_relation PRIMARY KEY (relationid);
